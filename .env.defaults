# Environment
NODE_ENV=development # Change to 'production' in production environments
PORT=5000 # Port on which the server will run

# Base URLs
BACKEND_BASE_URL_DEV=http://localhost:5000 # Your local backend server URL
FRONTEND_BASE_URL_DEV=http://localhost:5173 # Your local frontend dev server URL

BACKEND_BASE_URL_PROD=https://api.example.com # Replace with your production backend domain
FRONTEND_BASE_URL_PROD=https://www.example.com # Replace with your production frontend domain

# MongoDB
DATABASE_URI=mongodb+srv://user:password@cluster.mongodb.net/dbname # Replace with actual MongoDB connection URI

# JWT Configuration
JWT_SECRET_KEY=supersecretkey123 # Replace with a strong secret key for signing - `openssl rand -base64 32`, command to generate a secure key
JWT_ALGORITHM=HS256 # Common JWT algorithm; use RS256 for asymmetric if needed
JWT_EXPIRY=1h # Token expiry time (e.g., '1h', '7d', '60m')

# Email Server
EMAIL_HOST=smtp.example.com # Replace with your SMTP provider's host (e.g., smtp.gmail.com)
EMAIL_PORT=587 # Common SMTP port (587 for TLS, 465 for SSL)
USER_EMAIL=you@example.com # Replace with your sender email address
USER_PASSWORD=your_email_password # Replace with your email account password or app-specific password

# Twilio (for SMS/Voice)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx # Found in your Twilio Console
TWILIO_AUTH_TOKEN=your_twilio_auth_token # Found in your Twilio Console
TWILIO_VERIFY_SERVICE_SID=VAxxxxxxxxxxxxxxxxxxxxxxxxxxxxx # Found in your Twilio Verify dashboard

# Cloudinary (for image storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name # Found in your Cloudinary dashboard
CLOUDINARY_API_KEY=123456789012345 # Replace with your Cloudinary API key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret # Replace with your Cloudinary API secret
